{
  "name": "nextjs-starterkit",
  "private": true,
  "engines": {
    "node": "16.15.0",
    "npm": "8.5.5"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postbuild": "next-sitemap",
    "sb": "start-storybook -p 6006",
    "sb-build": "build-storybook",
    "sb-update": "sb upgrade",
    "lint": "run-p lint:*",
    "lint:style": "stylelint --fix './src/**/*.tsx'",
    "lint:es": "eslint --fix './src/**/*.{ts,tsx}'",
    "lint:ts": "tsc --noEmit",
    "format": "prettier --write 'src/**/*'",
    "test": "jest",
    "check": "npm run lint && npm run format && npm run test",
    "commit": "git add . && lint-staged -v",
    "update": "npx -p npm-check-updates -c 'ncu -t -u'",
    "minor-update": "npx -p npm-check-updates -c 'ncu -t minor -u'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix",
      "bash -c 'npm run lint:ts'",
      "bash -c 'npm run test'"
    ]
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "ress": "5.0.2",
    "styled-components": "5.3.5"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@storybook/addon-actions": "6.4.22",
    "@storybook/addon-essentials": "6.4.22",
    "@storybook/addon-links": "6.4.22",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.4.22",
    "@storybook/testing-react": "1.2.4",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/node": "16.11.33",
    "@types/react": "17.0.49",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/typescript-estree": "5.22.0",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.5",
    "babel-plugin-styled-components": "2.0.7",
    "chromatic": "6.5.4",
    "eslint": "8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-storybook": "0.5.11",
    "eslint-plugin-testing-library": "5.4.0",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "eslint-plugin-unicorn": "42.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-styled-components": "7.0.8",
    "lint-staged": "12.4.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "react-test-renderer": "17.0.2",
    "stylelint": "14.8.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard": "25.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.6.4"
  }
}
