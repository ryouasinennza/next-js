{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/test.ts",
    "./src/**/*.tsx",
    "./e2e/**/*.ts",
    "./playwright.config.ts",
    ".next/types/**/*.ts",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
